{
  "name": "idealizetecnologia/pagseguro-php-sdk",
  "description": "Biblioteca de integração com o PagSeguro",
  "authors": [
    {
      "name": "PagSeguro"
    }
  ],
  "require": {
    "php": "^8.0",
    "ext-curl": "*",
    "lib-curl": "*",
    "lib-openssl": "*"
  },
  "require-dev": {
    "phpunit/phpunit": "*"
  },
  "autoload": {
    "psr-4": {
      "PagSeguro\\": "source/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "PagSeguro\\Tests\\": "tests/"
    }
  }
}
